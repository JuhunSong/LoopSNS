<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp"
    tools:context=".MainActivity">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentInsetStart="0dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="16dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:background="@drawable/header"
            android:paddingStart="10dp"
            app:contentInsetStart="0dp"
            app:navigationIcon="@drawable/baseline_arrow_back_24"
            app:titleTextColor="@android:color/black" />
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:id="@+id/article_body"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/writer_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/user_circle" />

            <TextView
                android:id="@+id/writer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_bold"
                android:text="작성자 이름"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/profile_image"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_bold"
                android:text="2024-07-01 12:00"
                android:textColor="@color/gray"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@+id/profile_image"
                app:layout_constraintTop_toBottomOf="@+id/writer_name" />
        </androidx.constraintlayout.widget.ConstraintLayout>



    </LinearLayout>

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/tags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="66dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        app:flexWrap="wrap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/article_body"
        app:layout_constraintWidth_max="150dp">

        <TextView
            android:id="@+id/tag_1_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/map_overview_article_tag_item_bg_red"
            android:paddingLeft="13dp"
            android:paddingTop="4dp"
            android:paddingRight="13dp"
            android:paddingBottom="4dp"
            android:text="태그1"
            android:textColor="@color/tag_red_text"
            android:textSize="12sp"
            android:visibility="visible"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="2dp" />

        <TextView
            android:id="@+id/tag_2_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/map_overview_article_tag_item_bg_blue"
            android:paddingLeft="13dp"
            android:paddingTop="4dp"
            android:paddingRight="13dp"
            android:paddingBottom="4dp"
            android:text="태그1"
            android:textColor="@color/tag_blue_text"
            android:textSize="12sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/keyword_1_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/map_overview_article_tag_item_bg_black"
            android:paddingLeft="13dp"
            android:paddingTop="4dp"
            android:paddingRight="13dp"
            android:paddingBottom="4dp"
            android:text="태그1"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/keyword_2_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/map_overview_article_tag_item_bg_black"
            android:paddingLeft="13dp"
            android:paddingTop="4dp"
            android:paddingRight="13dp"
            android:paddingBottom="4dp"
            android:text="태그1"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/keyword_3_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/map_overview_article_tag_item_bg_black"
            android:paddingLeft="13dp"
            android:paddingTop="4dp"
            android:paddingRight="13dp"
            android:paddingBottom="4dp"
            android:text="태그1"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/keyword_4_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/map_overview_article_tag_item_bg_black"
            android:paddingLeft="13dp"
            android:paddingTop="4dp"
            android:paddingRight="13dp"
            android:paddingBottom="4dp"
            android:text="키워드444"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:visibility="gone" />

    </com.google.android.flexbox.FlexboxLayout>

</androidx.constraintlayout.widget.ConstraintLayout>